<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>

    <body>

        <!-- ejs partials -->
        <%- include('./partials/nav.ejs') %>
            <h2 class="blog-title ">All blogs</h2>

            <div class="blogs content">

                <% if(blogs.length>0) { %>
                    <% blogs.forEach(blog=>{ %>
                        <a class=single href="/blogs/ <%= blog._id%>">

                            <div class="card">
                                <h3 class="title">
                                    <%= blog.title %>
                                </h3>
                                <p class="snippet">
                                    <%= blog.snippet %>
                                </p>
                            </div>
                        </a>

                        <% }) %>
                            <% } else {%>
                                <p> No blogs to display</p>
                                <% } %>
            </div>
            <%- include('./partials/footer.ejs') %>

    </body>

</html>